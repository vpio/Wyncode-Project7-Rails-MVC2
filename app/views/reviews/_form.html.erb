      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <% if @product.nil? %>
    <div class="field">
      <%= form.label :product_id %><br>
      <%= form.text_field :product_id %>
    </div>
  <% else %>
    <%= form.hidden_field :product_id, value: @product.id %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
